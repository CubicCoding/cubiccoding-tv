<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_actions_btn_vertical_space</item>
        <item name="android:layout_marginBottom">@dimen/bottom_actions_btn_vertical_space</item>
        <item name="android:background">@drawable/rectangle_round_stroke</item>
        <item name="android:theme">@style/TextInputLayoutAppearance</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">@dimen/bottom_actions_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/bottom_actions_edittext_margin_bottom</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/prompt</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/bottom_actions_btn_vertical_space</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/bottom_actions_edittext_size</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_button_selector</item>
        <item name="android:paddingLeft">@dimen/bottom_actions_login_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/bottom_actions_login_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/bottom_actions_login_margin_vertical</item>
        <item name="android:paddingBottom">@dimen/bottom_actions_login_margin_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/bottom_actions_login_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>